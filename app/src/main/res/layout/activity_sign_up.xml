<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/bold"
        android:text="@string/create_account"
        android:textColor="@color/dull_white"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_pic_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/medium"
        android:text="@string/upload_photo"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/display_name_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/display_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_drawable"
        android:fontFamily="@font/regular"
        android:gravity="start|top"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:padding="16dp"
        android:textColor="@color/dull_white"
        android:textColorHint="@color/secondary_text_color_night"
        app:layout_constraintBottom_toTopOf="@+id/bio_edit_text"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bio_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_drawable"
        android:fontFamily="@font/regular"
        android:gravity="start|top"
        android:hint="Bio"
        android:inputType="textEmailAddress"
        android:lines="2"
        android:padding="16dp"
        android:textColor="@color/dull_white"
        android:textColorHint="@color/secondary_text_color_night"
        app:layout_constraintBottom_toTopOf="@+id/username_edit_text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/input_drawable"
        android:fontFamily="@font/regular"
        android:gravity="start|top"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/dull_white"
        android:textColorHint="@color/secondary_text_color_night"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_drawable"
        android:fontFamily="@font/regular"
        android:gravity="start|top"
        android:hint="Password"
        android:inputType="textPassword"
        android:lines="1"
        android:padding="16dp"
        android:textColor="@color/dull_white"
        android:textColorHint="@color/secondary_text_color_night"
        app:layout_constraintBottom_toTopOf="@+id/dont_have_an_account" />

    <TextView
        android:id="@+id/dont_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/dull_white"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_btn"
        app:layout_constraintStart_toStartOf="@+id/sign_up_btn" />

    <TextView
        android:id="@+id/login_instead_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:gravity="center"
        android:text="Login instead"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dont_have_an_account"
        app:layout_constraintStart_toEndOf="@+id/dont_have_an_account"
        app:layout_constraintTop_toTopOf="@+id/dont_have_an_account" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:padding="8dp"
        android:text="Create Account"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>